<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote name="floko"
       fetch="https://github.com/FlokoROM/"
       revision="refs/heads/10.0" />

  <!-- remove-project to replace -->
  <remove-project name="crdroidandroid/android" />
  <remove-project name="crdroidandroid/android_build" />
  <remove-project name="crdroidandroid/android_frameworks_base" />
  <remove-project name="crdroidandroid/android_lineage-sdk" />
  <remove-project name="crdroidandroid/android_packages_apps_crDroidMusic" />
  <remove-project name="crdroidandroid/android_packages_apps_crDroidSettings" />
  <remove-project name="crdroidandroid/android_packages_apps_LineageParts" />
  <remove-project name="crdroidandroid/android_packages_apps_Settings" />
  <remove-project name="crdroidandroid/android_packages_apps_SetupWizard" />
  <remove-project name="crdroidandroid/android_packages_apps_Updater" />
  <remove-project name="crdroidandroid/android_vendor_addons" />
  <remove-project name="crdroidandroid/android_vendor_crdroid" />
  <remove-project name="crdroidandroid/android_vendor_crDroidOTA" />

  <!-- FlokoROM -->
  <project path="android" name="manifesto" remote="floko" />
  <project path="build/make" name="build" remote="floko" >
	  <copyfile src="core/root.mk" dest="Makefile" />
	  <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
	  <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
	  <linkfile src="core" dest="build/core" />
	  <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
	  <linkfile src="target" dest="build/target" />
	  <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="frameworks/base" name="frameworks_base" remote="floko" />
  <project path="lineage-sdk" name="lineage-sdk" remote="floko" />
  <project path="packages/apps/crDroidSettings" name="packages_apps_FlokoSettings" remote="floko" />
  <project path="packages/apps/LineageParts" name="packages_apps_LineageParts" remote="floko" />
  <project path="packages/apps/OmniSwitch" name="packages_apps_OmniSwitch" remote="floko" />
  <project path="packages/apps/Settings" name="packages_apps_Settings" remote="floko" />
  <project path="packages/apps/SetupWizard" name="packages_apps_SetupWizard" remote="floko" />
  <project path="vendor/addons" name="vendor_addons" remote="floko" />
  <project path="vendor/lineage" name="vendor_floko" remote="floko" />
</manifest>
